@using RestaurantWebBL.Interfaces
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DailyMenuViewModel
@inject ILocalizationService LocalizationService

@{
    ViewData["Title"] = @LocalizationService.GetStringWithCode("daily-menu");
}

<h3>@LocalizationService.GetStringWithCode("confirm-delete")</h3>
<div>
    <h4>@LocalizationService.GetStringWithCode("daily-menu")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @LocalizationService.GetStringWithCode("daily-menu-date")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @LocalizationService.GetStringWithCode("daily-menu-day")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DayOfWeek)
        </dd>
        <dt class = "col-sm-2">
            @LocalizationService.GetStringWithCode("daily-menu-price")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MenuPrice)
        </dd>
        <dt class = "col-sm-2">
            @LocalizationService.GetStringWithCode("meal-name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meal.Name)
        </dd>
        <dt class = "col-sm-2">
            @LocalizationService.GetStringWithCode("meal-description")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meal.Description)
        </dd>
        <dt class = "col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <div class="col-6">
                <div>
                    <img class="w-50 p-3" src="@Url.Content(Model.Meal.Picture)" />
                </div>
            </div>
        </dd>
        <dt class = "col-sm-2">
            @LocalizationService.GetStringWithCode("meal-allergens")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meal.Allergens, "Allergens")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" class="btn btn-primary"/>
        <input type="submit" value="@LocalizationService.GetStringWithCode("delete")" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">@LocalizationService.GetStringWithCode("back")</a>
    </form>
</div>
