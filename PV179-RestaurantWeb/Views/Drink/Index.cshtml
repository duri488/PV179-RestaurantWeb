@model IEnumerable<DrinkViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<p>
    <a class ="btn btn-lg btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @using (Html.BeginForm("Delete", "Drink", new { id = item.Id }, FormMethod.Post, true, new { @class = "form-inline" }))
                    {
                        <a class="btn btn-secondary my-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-secondary my-1">Edit</a>
                        <input class="btn btn-secondary my-1" type="submit" value="Delete" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
