@using Microsoft.AspNetCore.Identity
@using RestaurantWebDAL.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello @User.Identity?.Name!</span>
        </li>
        <li class="nav-item">
            @using (Html.BeginForm("Logout", "Identity", new { returnUrl = Url.Action("Index", "Restaurant") }, FormMethod.Post))
            {
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            }
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("Login", "Identity")">Login</a>
        </li>
    }
</ul>
